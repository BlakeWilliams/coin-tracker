{
  "name": "coin-tracker",
  "version": "0.0.2",
  "description": "Track virtual dollars for virtual profit",
  "author": "Blake Williams",
  "license": "MIT",
  "main": "app/main.js",
  "scripts": {
    "build-main": "webpack --config webpack.config.main.js",
    "build-renderer": "webpack --config webpack.config.renderer.js",
    "build": "yarn run build-main && yarn run build-renderer",
    "start":
      "yarn run build-main && concurrently --kill-others \"yarn run watch-dev\" \"sleep 3 && yarn run electron build/main/index.js\"",
    "prettify": "prettier **/*.js --write",
    "lint": "eslint '**/*.js'",
    "precommit": "lint-staged",
    "test": "jest",
    "watch-dev":
      "yarn run webpack-dev-server --config webpack.config.renderer.js",
    "package": "rm -rf build && yarn run build && yarn run electron-builder",
    "release":
      "rm -rf build && yarn run build && yarn run electron-builder -p always"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.8",
    "electron": "^1.7.10",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "classnames": "^2.2.5",
    "electron-is-dev": "^0.3.0",
    "electron-redux": "^1.3.1",
    "electron-store": "^1.3.0",
    "electron-updater": "^2.17.8",
    "font-awesome": "^4.7.0",
    "format-currency": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "build": {
    "appId": "me.blakewilliams.coin-tracker",
    "productName": "Coin Tracker",
    "mac": {
      "icon": "app/images/mac.icns",
      "target": "zip",
      "publish": {
        "provider": "github",
        "owner": "BlakeWilliams"
      }
    }
  }
}
